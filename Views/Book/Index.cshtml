@model BookListViewModel

@if (TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}
<table class="table">
    <thead>
        <tr class="text-primary">
            <th scope="col">ISBN</th>
            <th scope="col">Titel</th>
            <th scope="col">Auteur</th>
            <th scope="col">Publicatiejaar</th>
            <th scope="col">Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Book book in Model.Books)
        {
            <tr>
                <td>@book.ISBN</td>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.PublicationYear</td>
                <td>@Html.DisplayFor(m => book.Type)</td>
                <td>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#delete-modal-@book.Id">
                        <i class="fas fa-trash"></i>
                    </button>
                    <a asp-action="Delete" asp-controller="Book" asp-route-id="@book.Id" role="button" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                    <a asp-action="Delete" asp-controller="Book" asp-route-id="@book.Id" role="button" class="btn btn-secondary"><i class="fas fa-star"></i></a>
                    <br />
                    <br />
                </td>
            </tr>
        }
    </tbody>
</table>
@foreach (Book book in Model.Books)
{
    <div class="modal fade" id="delete-modal-@book.Id" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">@book.Title verwijderen?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Ben je zeker dat je @book.Title wil verwijderen?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <a asp-controller="Book" asp-action="Delete" asp-route-id="@book.Id" role="button" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    </div>
}
<a asp-controller="Book" asp-action="Create" role="button" class="btn btn-labeled btn-primary">Maak een nieuw boek</a>
<a asp-controller="Book" asp-action="Create" role="button" class="btn btn-labeled btn-primary">Enkel favorieten tonen</a>

